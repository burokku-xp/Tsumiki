{
  "name": "tsumiki",
  "displayName": "Tsumiki",
  "description": "努力の積み上げを可視化するVSCode拡張機能",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:tsumiki.tsumikiView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tsumiki.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "tsumiki.toggleTimer",
        "title": "作業時間計測の開始/停止",
        "icon": "$(clock)"
      },
      {
        "command": "tsumiki.startTimer",
        "title": "作業時間計測を開始"
      },
      {
        "command": "tsumiki.stopTimer",
        "title": "作業時間計測を停止"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tsumiki",
          "title": "Tsumiki",
          "icon": "$(symbol-class)"
        }
      ]
    },
    "views": {
      "tsumiki": [
        {
          "id": "tsumikiView",
          "name": "本日の記録",
          "type": "webview"
        }
      ]
    }
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.80.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.0",
    "esbuild": "^0.19.0",
    "glob": "^10.3.0",
    "mocha": "^10.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.0"
  },
  "scripts": {
    "build": "npm run build:extension && npm run build:webview",
    "build:extension": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "build:webview": "esbuild src/webview/index.tsx --bundle --outfile=out/webview/webview.js --format=iife --platform=browser --jsx=automatic",
    "watch": "npm run watch:extension & npm run watch:webview",
    "watch:extension": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --watch",
    "watch:webview": "esbuild src/webview/index.tsx --bundle --outfile=out/webview/webview.js --format=iife --platform=browser --jsx=automatic --watch",
    "test": "npm run build && npm run test:compile && node out/test/runTest.js",
    "test:compile": "tsc -p tsconfig.test.json",
    "test:watch": "npm run test:compile && vscode-test"
  }
}
